{% extends 'templates/app.twig' %}

{% block content %}
{% include 'templates/partials/side-nav.twig' %}

<!-- User Section-->
<section class="client">
	<div class="container">
		<div class="row">
			<!-- User Profile -->
			<div class="col-lg-6 offset-lg-3">
				<div class="client card">
					<div class="card-body text-left">
						{% if user[0].photo is defined %}
						<div class="carousel-container">
					    <a class="prev">
					    	<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					    	<span class="sr-only">Previous</span>
					    </a>
					    <a class="next">
					    	<span class="carousel-control-next-icon" aria-hidden="true"></span>
					    	<span class="sr-only">Next</span>
					    </a>
					    <div class="slider-container">
					      <div class="slider">
					      	{% for item in user[0].photo %}
										<div class="slide" style="background-image: url('{{ item }}')"></div>
									{% endfor %}
					      </div>
					    </div>
					  </div>
						{% endif %}
						<div class="client-title text-center">
							<span class="online-status">{{user[0].online}}</span>
							<h3>{{ user[0].basic_info.username }},</h3><span>{{ user[0].basic_info.age }}</span>
						</div>
							<h5 class="card-title">About me:</h5>
							<p class="card-text">{{ user[0].basic_info.about_me }}</p>
							<h5 class="card-title">My interests:</h5>
							<div id="user-tags">
								{% for interest in user[0].interests %}
										<span class="badge badge-info">{{ interest }}</span>
								{% endfor %}
							</div>
							<h5 class="card-title mt-3">Popularity:</h5>
							<div class="progress" style="height: 7px">
								<div class="progress-bar bg-red" role="progressbar" style="width: {{ user[0].basic_info.fame_rating }}%; height: 7px;" aria-valuenow="{{ user[0].basic_info.fame_rating }}" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
							<div class="line"></div>

						<div class="client-social d-flex justify-content-between"><a href="#" target="_blank"><i class="fa fa-facebook"></i></a><a href="#" target="_blank"><i class="fa fa-twitter"></i></a><a href="#" target="_blank"><i class="fa fa-google-plus"></i></a><a href="#" target="_blank"><i class="fa fa-instagram"></i></a></div>
					</div>
				</div>
			</div> <!-- end of user profile -->
		</div>
	</div>
</section>

<script>
	var userPhoto = {{ user[0].photo | json_encode | raw}};
	// console.log(userPhoto);
</script>
<script src="{{ base_url() }}/js/other-user.js"></script>

{% include 'templates/partials/footer.twig' %}
{% endblock %}
